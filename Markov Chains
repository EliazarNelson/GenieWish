begin
  j
  i
  r
  S
  S.Omega
   s_1..s_r
  end
  S.Family
   S_1..S_r
  end
  S.Prob
   p_ij
   p^2
  end
  for 1..r
   p_ij*p_ij
  end
  class P
  [A,B,C
   D,E,F
   G,H,I]
  end
  class absorb
   S
   if S = s_r
   then pause
  end
 def ergodic
  P
  check A = B
  check A = C
  check A = D
  check A = E
  check A = F
  check A = G
  check A = I
  check A = H
  
  if true
  discard P
  else cont
 
 
end
