
begin
 def x
 def y
 def n
 def a
 def h
 def i
 def t
 def_differential
   d(u)/d(t)*(t) = u(t + delta(t))-u(t)/delta(t) 
 end
 def derive
  f(a+h)+h/h
 end
 def delta
  (t_i+t)-t
 end
  class ordexplicit
   def_derive
    
   end
    def_F
     (x,y,y^derive..y^n-1)
    end  
  end
 class
  def_F
   (x,y,y^derive,y^derive2..y^n) = 0
  end
 end
 class Linear
  y^(n) = for 0..n-1 do
   a_i * (x)y^i + r(x)
  end 
  
 end
 class Nonlinear
  def_F1
   f(x+y) != f(x) + f(y)
  end
  def_F2
   f(alpha*a) != alpha*f(x)
  end
 end
 class Discretization
  
 def_discrete
  u_n = u_n-1 + delta(t)f(u_n-1,t_n-1)
 end
end
